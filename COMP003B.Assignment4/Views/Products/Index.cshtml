@model List<Product> 

@if (Model != null)  
{
    @foreach (var bottle in Model)
    {
        <div class="bottle">
            <h3>@bottle.Name</h3>
            @if (!string.IsNullOrEmpty(bottle.ImageName))
            {
                <img src="~/images/@bottle.ImageName" width="150" />
            }
            <p>Price: $@bottle.Price</p>
        </div>
    }
}
else
{
    <p>No bottles available right now.</p>
}